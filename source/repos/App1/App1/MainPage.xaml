<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.MainPage">

    <StackLayout Margin="20,35,20,25"
                Orientation="Vertical">
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="IoT DATA" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <StackLayout Margin="20,35,20,25"
                Orientation="Horizontal">

            <Button Text="CONNECT" 
                TextColor="White"
                BackgroundColor="LightCoral"
                Clicked = "connectButton_Clicked"
                WidthRequest="150"
                HeightRequest="50" HorizontalOptions="Start"
                />

            <Button Text="START" 
                    TextColor="White"
                    BackgroundColor="LightSeaGreen"
                    Clicked = "Button_Clicked"
                    WidthRequest="150"
                    HeightRequest="50" HorizontalOptions="End"
                    />
        </StackLayout>

        <Label x:Name="label" Text="..."/> 

    </StackLayout>

</ContentPage>
